{
  "name": "Soundcloud Linkify",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Identify artists in tracklists for mixes and link to their Soundcloud pages",

  "icons": { 
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png" 
  },

  "permissions": [
    "tabs"
  ],

  "page_action": {
    "default_icon" : "images/icon-19.png",
    "default_title": "Soundcloud Linkify"
  },

  "background": {
    "page" : "background.html"
  },

  "content_scripts": [
    {
      "matches" : [
        "http://soundcloud.com/*", "https://soundcloud.com/*"
      ],
      "js"  : ["scripts/chrome/content.js"],
      "css" : ["styles/inject.css"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ]
}